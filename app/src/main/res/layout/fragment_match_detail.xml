<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Events.MatchDetailFragment">


    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Match Summary"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/title_ocv"
            android:layout_height="40dp"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title_ocv"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/match_name_cv"
                    android:layout_margin="@dimen/cv_margin"
                    app:cardCornerRadius="@dimen/cv_corners"
                    app:contentPadding="@dimen/cv_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#f3f3f3">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:text="Name"
                                android:layout_width="0dp"
                                android:padding="2dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"

                                android:id="@+id/match_name_txt"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:layout_height="24dp"
                                android:textAllCaps="false" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/match_name_ip"
                                android:layout_height="33.5dp"
                                android:background="#ffffff"
                                android:padding="7dp"
                                android:layout_margin="5dp"
                                android:textAlignment="textStart"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teams_cv"
                    android:layout_margin="@dimen/cv_margin"
                    app:contentPadding="@dimen/cv_padding"
                    app:cardCornerRadius="@dimen/cv_corners">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#f3f3f3">


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Teams"
                                android:layout_width="0dp"
                                android:layout_height="24dp"
                                android:padding="2dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:id="@+id/teams_txt"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:textAllCaps="false" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_margin="5dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:background="#fff">

                                <TextView
                                    android:id="@+id/t1_ip"
                                    android:padding="7dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="33.5dp"
                                    android:background="#00000000"
                                    android:textSize="14sp" />


                            </LinearLayout>


                            <TextView
                                android:text="VS"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView7"
                                android:padding="2dp"
                                android:textStyle="normal|bold"
                                android:textSize="24sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="#fff"
                                >

                                <TextView
                                    android:id="@+id/t2_ip"
                                    android:padding="7dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="33.5dp"
                                    android:background="#00000000"
                                    android:maxLines="1" />


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>



                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scores_cv"
                    android:layout_margin="@dimen/cv_margin"
                    app:contentPadding="@dimen/cv_padding"
                    app:cardCornerRadius="@dimen/cv_corners">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#f3f3f3">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="Scores"
                                android:padding="2dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="0dp"
                                android:layout_height="24dp"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:id="@+id/Scores_txt"
                                android:layout_weight="1"
                                android:textAllCaps="false" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/t1_name_score"
                                android:layout_weight="1"
                                android:padding="2dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textColor="#333333" />

                            <TextView
                                android:id="@+id/t2_name_score"
                                android:padding="2dp"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:maxLines="1"
                                android:textColor="#333333" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:background="#fff"
                                android:layout_marginEnd="15dp">

                                <TextView
                                    android:id="@+id/t1_score_ip"
                                    android:layout_marginEnd="5dp"
                                    android:padding="7dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="33.5dp"
                                    android:background="#00000000"
                                    android:maxLines="1" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:background="#fff"
                                >

                                <TextView
                                    android:id="@+id/t2_score_ip"
                                    android:padding="7dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="33.5dp"
                                    android:textColorHint="#333333"
                                    android:background="#00000000"
                                    android:maxLines="1" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/win_cv"
                    android:layout_margin="@dimen/cv_margin"
                    app:contentPadding="@dimen/cv_padding"
                    app:cardCornerRadius="@dimen/cv_corners">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#f3f3f3">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:text="Winner"
                                android:layout_width="0dp"
                                android:padding="2dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"

                                android:id="@+id/win_txt"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:layout_height="24dp"
                                android:textAllCaps="false" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/win_ip"
                                android:layout_height="33.5dp"
                                android:background="#ffffff"
                                android:padding="7dp"
                                android:layout_margin="5dp"
                                android:textAlignment="textStart"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/comm_cv"
                    android:layout_margin="@dimen/cv_margin"
                    app:contentPadding="@dimen/cv_padding"
                    app:cardCornerRadius="@dimen/cv_corners"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#f3f3f3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp">

                            <TextView
                                android:id="@+id/comment_txt"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:text="Comment"
                                android:padding="2dp"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textAllCaps="false" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:layout_margin="5dp"
                            android:background="#fff"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/comment_ip"
                                android:padding="7dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:textSize="14sp"
                                android:textStyle="normal|italic"
                                android:textAllCaps="false" />

                        </LinearLayout>



                    </LinearLayout>
                </android.support.v7.widget.CardView>



            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</FrameLayout>
