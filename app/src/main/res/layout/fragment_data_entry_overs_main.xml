<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="red.shaurya2k17.Sports.Cricket.DataEntryOversMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/on_strike_bats_overs_main"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:minHeight="45dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="2dp"
                    android:padding="2dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/other_bats_overs_main"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:minHeight="45dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="2dp"
                    android:padding="2dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/runs_overs_main"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:minHeight="45dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="2dp"
                    android:padding="2dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/extras_overs_main"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:minHeight="45dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="2dp"
                    android:padding="2dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/bye_runs_overs_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="2dp"
                    android:hint="Bye Runs (If any)"
                    android:minHeight="45dp"
                    android:padding="2dp"
                    android:textSize="18sp"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ball_result_overs_main"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:minHeight="45dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="2dp"
                    android:padding="2dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/run_out_overs_main"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:minHeight="45dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="2dp"
                    android:padding="2dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/wicket_by_overs_main"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:minHeight="45dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="2dp"
                    android:padding="2dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:visibility="visible" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp">

                <Button
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/next_overs_main"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />



            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:minHeight="45dp"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total Score"
                        android:id="@+id/tot_score_overs_main"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:minHeight="45dp"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Completed Overs"
                        android:id="@+id/comp_over_overs_main"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
