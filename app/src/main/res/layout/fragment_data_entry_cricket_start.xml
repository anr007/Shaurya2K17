<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sports.Cricket.DataEntryCricketStart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:minHeight="45dp"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Match name"
                android:id="@+id/match_nam_dec_st"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:visibility="visible" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t1_dec_st"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:minHeight="45dp"
            android:layout_margin="5dp"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:visibility="visible" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t2_dec_st"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:minHeight="45dp"
            android:layout_margin="5dp"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:visibility="visible" />



    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="45dp"
                    android:padding="7dp"
                    android:inputType="textPersonName"
                    android:id="@+id/tot_overs_dec_st"
                    android:hint="Overs"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp">

            <Button
                android:text="Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_start"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />



        </RelativeLayout>

    </LinearLayout>




    </FrameLayout>
