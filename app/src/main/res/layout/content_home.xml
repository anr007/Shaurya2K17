<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="red.shaurya2k17.Home"
    tools:showIn="@layout/app_bar_home">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag_view_home"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/home_view"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/frag_view_home">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_temp_cv"
            android:layout_margin="5dp"
            app:cardCornerRadius="@dimen/cv_corners"
            app:contentPadding="@dimen/cv_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#f3f3f3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:text="Name"
                        android:layout_width="0dp"
                        android:padding="2dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"

                        android:id="@+id/match_name_txt"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_height="24dp"
                        android:textAllCaps="false" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/mat_nam_lv_temp"
                        android:layout_height="33.5dp"
                        android:background="#ffffff"
                        android:padding="7dp"
                        android:layout_margin="5dp"
                        android:text="Shourya 2k17"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#f3f3f3">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#f3f3f3">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="Scores"
                                android:padding="2dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="0dp"
                                android:layout_height="24dp"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:id="@+id/Scores_txt"
                                android:layout_weight="1"
                                android:textAllCaps="false" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_margin="5dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:background="#fff">

                                <TextView
                                    android:id="@+id/t1_lv_temp"
                                    android:padding="7dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="33.5dp"
                                    android:background="#00000000"
                                    android:text="Computer Science"
                                    android:textSize="14sp" />


                            </LinearLayout>


                            <TextView
                                android:text="VS"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView7"
                                android:padding="2dp"
                                android:textStyle="normal|bold"
                                android:textSize="24sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="#fff"
                                >

                                <TextView
                                    android:id="@+id/t2_lv_temp"
                                    android:padding="7dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="33.5dp"
                                    android:background="#00000000"
                                    android:maxLines="1"
                                    android:text="Electronics Com" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:background="#fff"
                                android:layout_marginEnd="15dp">

                                <TextView
                                    android:id="@+id/t1_score_ip"
                                    android:layout_marginEnd="5dp"
                                    android:padding="7dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="33.5dp"
                                    android:background="#00000000"
                                    android:maxLines="1" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:background="#fff"
                                >

                                <TextView
                                    android:id="@+id/t2_score_ip"
                                    android:padding="7dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="33.5dp"
                                    android:textColorHint="#333333"
                                    android:background="#00000000"
                                    android:maxLines="1" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
